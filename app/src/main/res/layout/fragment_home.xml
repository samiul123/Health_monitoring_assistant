<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.samiu.health_monitoring_assistant.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:contentDescription="@null"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_action_person"
            android:id="@+id/imageId"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/greetId"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
        />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your last session\'s record"
            android:drawableStart="@drawable/ic_action_history"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Blood Pressure"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="value"
                android:layout_marginStart="60dp"
                android:id="@+id/bp_value_id"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Heart rate"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="value"
                android:id="@+id/heart_rate_value_id"
                android:textColor="#FFF"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Blood sugar"
                android:textColor="#FFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="value"
                android:id="@+id/blood_sugar_id"
                android:textColor="#FFF"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>


</LinearLayout>
